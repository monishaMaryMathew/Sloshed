<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monisha.samples.sloshed.fragments.DrinkSelectionFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/drink_back_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|left"
                android:layout_margin="7dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/beer_header"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Beer"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/wine_12_percent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="12%"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/beer_details"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:background="@drawable/beer2">

                        <LinearLayout
                            android:id="@+id/beer_percentage_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/beer_5_percent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5%"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/beer_7_percent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7%"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/beer_quantity_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_below="@id/beer_percentage_layout">

                            <RelativeLayout
                                android:id="@+id/beer_12_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 fl Oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/beer_16_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/beer_22_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/beer_40_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/wine_header"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Wine"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/wine_details"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:background="@drawable/wine">

                        <LinearLayout
                            android:id="@+id/wine_percentage_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wine_quantity_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_below="@id/beer_percentage_layout">

                            <RelativeLayout
                                android:id="@+id/wine_5_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/wine_25_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25.36 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/spirits_header"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Spirits and Cocktails"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/spirits_details"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:background="@drawable/spirit">

                        <LinearLayout
                            android:id="@+id/spirits_percentage_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/spirits_40_percent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40%"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/spirits_quantity_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_below="@id/beer_percentage_layout">

                            <RelativeLayout
                                android:id="@+id/spirits_1_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.5 fl Oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/spirits_6_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6.76 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/spirits_12_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.68 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/spirits_25_oz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25.36 fl oz"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/colorGrey"
                android:text="Cancel" />

            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Add" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
